@model OrderTracker.Models.ViewModels.EditDeliveryInfoViewModel

@{
    ViewData["Title"] = "Edit Delivery Information";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>
    <form asp-controller="DeliveryInfo" asp-action="Save" method="post">
        <div class="form-group">
            <input asp-for="Id" class="form-control" hidden />
        </div>
        <div class="form-group">
            <label asp-for="Seller" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="Seller" class="form-control" asp-items="Model.Sellers"></select>
                <span asp-validation-for="Seller" class="text-danger"></span>
            </div>
            <br />
        </div>
        <div class="form-group">
            <label asp-for="Product" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="Product" class="form-control" asp-items="Model.Products"></select>
                <span asp-validation-for="Product" class="text-danger"></span>
            </div>
            <br />
        </div>

        <div class="form-group">
            <label asp-for="StartDeliveryDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input id="datepicker" asp-for="StartDeliveryDate" class="form-control" value=""/>
                <span asp-validation-for="StartDeliveryDate" class="text-danger"></span>
            </div>
            <br />
        </div>
        <div class="form-group">
            <label asp-for="EndDeliveryDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input id="datepicker1" asp-for="EndDeliveryDate" class="form-control" value=""/>
                <span asp-validation-for="EndDeliveryDate" class="text-danger"></span>
            </div>
            <br />
        </div>
        <div class="col-md-10">
            <input type="submit" class="btn btn-info" value="Save" />
        </div>
    </form>
</div>


<script>
    $('#datepicker').datepicker({
        uiLibrary: 'bootstrap'
    });
    $('#datepicker1').datepicker({
        uiLibrary: 'bootstrap'
    });
</script>

